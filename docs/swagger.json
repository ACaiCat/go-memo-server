        "/api/auth/login": {
            "post": {
                "description": "处理用户登录并返回JWT令牌",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "认证"
                ],
                "summary": "用户登录",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Email 用户邮箱",
                        "name": "email",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "Password 用户密码",
                        "name": "password",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "登录成功",
                        "schema": {
                            "$ref": "#/definitions/handler.BaseResp-handler_userLoginResp"
                        }
                    },
                    "400": {
                        "description": "请求参数错误"
                    },
                    "403": {
                        "description": "邮箱或密码错误"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/auth/refresh": {
            "post": {
                "description": "刷新用户的JWT令牌",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "认证"
                ],
                "summary": "刷新用户登录令牌",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Authorization 认证字符串",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "令牌刷新成功",
                        "schema": {
                            "$ref": "#/definitions/handler.BaseResp-handler_userRefreshResp"
                        }
                    },
                    "400": {
                        "description": "请求参数错误或Token格式不正确"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "description": "处理用户注册并返回JWT令牌",
